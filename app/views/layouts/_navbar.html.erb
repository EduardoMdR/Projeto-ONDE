<div style="width:100%" class="navbar align-content-center flex-wrap justify-content-center">
<div class="row text-light menu">
    <!-- logo -->
    <div class="col-2">
      <a href="/"><img src="https://raw.githubusercontent.com/Project-ONDE/Projeto-ONDE/main/app/assets/images/logo2.png" class="m-3 logo" style="width: 100px;"></a>
    </div>
    <div class="col-8">
      <div class="row text-center">
        <!-- Barra de pesquisa -->
        <div class="col-12">
          <% unless  current_page?(root_path) %>
            <!-- Exemplo de uma outra navbar 
            <div class="searchbar_menu">
              <input type="text" placeholder="Procurar lojas hoteis, e muito mais ..." class="search_input_menu">
              <%= link_to "<i class='fa fa-search' ></i>".html_safe, pesquisa_path, class: 'search_icon_menu' %>
            </div>
            -->
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <select class="custom-select input-group-text">
                  <option selected>Todas</option>
                  <option value="1">Alimentação</option>
                  <option value="2">Hospedagem</option>
                  <option value="3">turismo</option>
                </select>
              </div>
              <input type="text" class="form-control" placeholder="Procurar lojas hoteis, e muito mais ..." aria-label="Username" aria-describedby="basic-addon1">
              <%= link_to "<i class='fa fa-search p-2 pt-2' ></i>".html_safe, pesquisa_path, class: 'pesquisar_icon_menu' %>
            </div>
          <% else %>
            <p class="pt-2"></p>
          <% end %>
        </div>
        <!-- Páginas -->
        <div class="col-12">
          <div class="row d-flex justify-content-center">
            <nav>
              <ul id="main">
                <li>Empresas
                  <ul class="drop">
                    <div>
                        <li><%= link_to 'todas empresas', pesquisa_path, class: 'text-light'%></li>
                        <li><%= link_to 'Página da empresa', empresa_path, class: 'text-light'%></li>
                        <li><%= link_to 'Home da empresa', homeempresa_path, class: 'text-light'%></li>
                        <li><%= link_to 'Ofertas', todasofertas_path, class: 'text-light'%></li>
                        <li><%= link_to 'Criar oferta', criaroferta_path, class: 'text-light'%></li>
                        <li><%= link_to 'Suas review', review_path, class: 'text-light'%></li>
                        <li><%= link_to 'Editar dados', editardados_path, class: 'text-light'%></li>
                    </div>
                  </ul>
                </li>
                <li>Ofertas
                  <ul class="drop">
                    <div>
                      <li><%= link_to 'Ofertas', ofertas_path, class: 'text-light'%></li>
                      <li><%= link_to 'Página da oferta', ofertasdestaque_path, class: 'text-light'%></li>
                    </div>
                  </ul>
                <li><%= link_to 'Cupons', cupons_path, class: 'text-light'%></li>
                <li><%= link_to 'Contato', contato_path, class: 'text-light'%></li>
                <div id="marker"></div>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>  
    <!-- Login -->
    <div class="col-2">
      <div class="row p-2">
        <div class="col-12">
          <i class="fa fa-user-plus text-center" aria-hidden="true">
            <a href="" class="text-light" data-toggle="modal" data-target="#modalLRForm">Cadastro</a>
          </i>
        </div>
        <div class="col-12">
          <i class="fa fa-sign-in text-center" aria-hidden="true">
            <a href="" class="text-light pl-1" data-toggle="modal" data-target="#elegantModalForm">Login</a> 
          </i>
        </div>
      </div>
    </div>
  </div>
</div>


