<p><%= flash[:error] %></p>
<div class="container">
  <h1>Cadastrar Usuário</h1>
  <%= form_with model: @user, url: :new_user, method: :post do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div class="form-group">
      <%= form.label :role %>
      <%= form.number_field :role_id %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <%= form.submit "Cadastrar Usuário" %>
  <% end %>
</div>