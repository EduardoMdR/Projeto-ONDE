      <td><%= form.description %></td>
      <td><%= button_to 'Editar', edit_category_path(form), method: 'get'%></td>
      <td><%= button_to 'Remover', category_path(form), method: 'delete', data: { confirm: 'VocÃª tem certeza?' } %></td>
  <% end %>
</table>
