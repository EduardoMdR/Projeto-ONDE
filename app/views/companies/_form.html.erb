<%= form_with model: company, url: url, method: m do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Descrição' %>
    <%= form.text_field :description, placeholder: 'Um bom produto...', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone, 'Telefone' %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :fb_link, 'Facebook' %>
    <%= form.text_field :fb_link, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :maps, 'Localização' %>
    <%= form.text_field :maps, placeholder: 'Rua, Avenida', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subcategory, 'Categoria' %>
    <%= form.collection_select(:subcategory_id, Subcategory.all, :id, :name) %>
  </div>

  <div class="form-group">
    <%= form.label :user_id, 'Usuário' %>
    <%= form.collection_select(:user_id, User.all, :id, :name) %>
  </div>

  <div class="text-center">
    <%= form.submit 'Adicionar', class: 'btn btn-outline-primary' %>
  </div>
<% end %>