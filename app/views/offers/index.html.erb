<%= render 'layouts/navbar' %>

<div class="pagina-ofertas mt-1">
  <h1 class="titulo pt-4">Milhares de Ofertas estão esperando você</h1>
  <div class="row mb-2 mt-5 justify-content-center pb-4">
    <input class="form-control col-8 col-sm-7 col-md-6 col-lg-5" type="text" placeholder="Buscar Roupa, comida e muito mais...">
    <a href="./pesquisa" class="btn col-3 col-sm-3 col-md-2 col-xl-1 text-center pt-2" style="background-color: #2454fc;color: #FFF; font-weight: bold;">BUSCAR</a>
  </div>
</div>
<div class="fundo">
  <div class="row">
    <!-- Menu -->
    <div class="col-12 col-sm-5 col-md-4 col-lg-3 col-xl-2 menulateral mb-3 mt-3">
      <h5 class="text-center">Ordenar ofertas:</h5>
      <div class="d-flex justify-content-center">
        <select class="" name="option">
          <option value="" disabled selected>Relevância</option>
          <option value="1">Avaliação</option>
          <option value="2">Prazo</option>
          <option value="3">Desconto</option>
        </select>
      </div>
      <hr class="my-4 w-75">
      <h5>Raio de busca:</h5>
      <div class="">
        <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
        <p>Distância: <span id="demo"></span> Km</p>
      </div>
      <hr class="my-4 w-75">
      <h5 class="pb-1">Preço</h5>
      <div class="pl-2">
        <h6>Até R$ 500 <small class="text-success">(12)</small></h6>
        <h6>R$ 500 a R$ 1500 <small class="text-success">(92)</small></h6>
        <h6>Acima de R$ 1500 <small class="text-success">(15)</small></h6>
        <h6></h6>
      </div>
      <hr class="my-4 w-75">
      <h5 class="pb-1">Parcelas</h5>
      <div class="pl-2">
        <h6>Até 12x</h6>
        <h6>10x a 5x</h6>
        <h6>até 3x</h6>
        <h6>3x</h6>
      </div>
    
    </div>

    <!-- Ofertas -->
    <div class="col-12 col-sm-6 col-md-8 col-lg-9 col-xl-10">
      <div class="row">
        <% @offers&.each do |form| %>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3  mt-1 item">
          <div class="card-deck">
            <div class="cards m-2">
              <img class="card-img-top img-fluid p-1 rounded-top p-3" src="https://www.extra-imagens.com.br/Control/ArquivoExibir.aspx?IdArquivo=1182070226" alt="Card image cap">
              <div class="card-body">
                <h5 class="oferta-titulo text-bold">R$ <%= form.new_price %>
                  <% if form.parceled.present? %>
                    <span class="text-success float-right pt-1"><%= form.qtd_parcel %>x sem juros</span>
                  <% else %>
                    <span class="text-success float-right pt-1">À vista</span>
                  <% end %>
                </h5>
                <div style="line-height: 5px;">
                  <p class="card-text d-none d-xl-block oferta-titulo-2">Preço: <s>R$ <%= form.old_price %></s> (Economia de 50%)</p>
                  <p class="card-text d-none d-xl-block oferta-titulo-2"><span style="color: #000">Tempo restante:</span> 10:59:01</p>
                  <p class="oferta-titulo-3 hometextcompany text-justify"><%= form.name %></p>
                  <i class="fa fa-check-circle text-primary"></i> <%= link_to form.company.name, show_company_path(form.company), class: 'font-weight-bold oferta-titulo-4' %>
                </div>
                <p class="h5">
                  <i class="fa fa-star text-warning"></i>
                  <i class="fa fa-star text-warning"></i>
                  <i class="fa fa-star text-warning"></i>
                  <i class="fa fa-star text-warning"></i>
                  <i class="fa fa-star-o"></i> <span class="text-primary h6">(35)</span>
                </p>
                <div class="d-flex justify-content-center">
                  <%= link_to "Ver Oferta", show_offer_path(form), class: 'botao-oferta mt-4 text-dark' %>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-3 p-1 text-center" id="descricao">
            <h5 class="pt-1">Faixa de preço</h5>
            <h5>
              <i class="fa fa-usd text-success" aria-hidden="true"></i>
              <i class="fa fa-usd text-success" aria-hidden="true"></i>
              <i class="fa fa-usd text-success" aria-hidden="true"></i>
            </h5>
            <div>
              <h5 class="pt-2">Aberto por mais: 1h e 59m</h5>
              <h6 class="float-right">16h</h6>
              <h6 class="float-left">8h</h6>
              <div class="progress">
                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">14h 01m</div>
              </div>
            </div>
            <h6 class="pt-3">
              <i class="fa fa-1x fa-phone"></i> <%= form.company.phone %>
            </h6>
            <h6>
              <i class="fa fa-1x fa-envelope-o"></i> <%= form.company.user.email %>
            </h6>
            <div class="text-center pt-2">
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3694.372689007904!2d-46.748700385096136!3d-22.187938585382042!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94c9ae09bf22398b%3A0x235d993ca1cef5b1!2sLojinha%20da%20Ju!5e0!3m2!1spt-BR!2sbr!4v1606923293698!5m2!1spt-BR!2sbr" width="100%" height="100" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

<script>
  var slider = document.getElementById("myRange");
  var output = document.getElementById("demo");
  output.innerHTML = slider.value / 10;

  slider.oninput = function() {
    output.innerHTML = this.value / 10;
  }
</script>