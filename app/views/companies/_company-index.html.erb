<div class="table-responsive">
  <table class="table table-striped align-middle" >
    <thead>
    <tr class="text-center">
      <th>Empresas</th>
      <th>Descrição</th>
    </tr>
    </thead>
    <tbody>
      <% @companies&.each do |form| %>
        <tr class="text-center">
          <td class="align-middle"><%= link_to form.name, show_company_path(form), class: 'text-dark' %></td>
          <td class="align-middle"><%= form.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p> <%= link_to "Adicionar nova empresa", new_company_path %> </p>