<%= form_with model: address, url: url, method: m do |form| %>
  <div class="form-group">
    <%= form.label :cep, 'CEP' %>
    <%= form.text_field :cep, class: 'form-control', id: 'cepField', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :address_line, 'Endereço' %>
    <%= form.text_field :address_line, placeholder: 'Rua, Avenida', class: 'form-control', id: 'logradouroField', required: true %>
  </div>

  <div class="form-row d-flex align-items-end">
    <div class="form-group col-4">
      <%= form.label :number, 'Número da residência' %>
      <%= form.text_field :number, class: 'form-control', id: 'numeroField', required: true %>
    </div>

    <div class="form-group col-8">
      <%= form.label :complement, 'Complemento (Opcional)' %>
      <%= form.text_field :complement, class: 'form-control', id: 'complementoField' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-8">
      <%= form.label :city, 'Cidade' %>
      <%= form.text_field :city, placeholder: 'Ex: Brasília', class: 'form-control', id: 'cidadeField', required: true %>
    </div>

    <div class="form-group col-4">
      <%= form.label :state, 'UF' %>
      <%= form.select :state, options_for_select(br_states), {}, class: 'form-control', id: 'estadoField', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :recipient_name, "Nome do destinatário" %>
    <%= form.text_field :recipient_name, value: current_user.name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, "Número de telefone" %>
    <%= form.text_field :phone_number, class: 'form-control phone_number', required: true %>
  </div>

  <div class="text-center">
    <%= form.submit 'Adicionar endereço', class: 'btn btn-outline-primary' %>
  </div>
<% end %>