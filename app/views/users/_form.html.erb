<%= form_with model: user, url: url, method: m do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :value, 'Email' %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <% if current_page?(new_user_path) %>
    <div class="form-group">
      <%= form.label :password, 'Senha' %>
      <%= form.password_field :password, class: 'form-control', required: true %>
    </div>
  <% end %>

  <% if current_user&.role_id == 1 %>
    <div class="form-group">
      <%= form.label :role_id, 'Função' %>
      <%= form.collection_select(:role_id, Role.all, :id, :name) %>
    </div>
  <% end %>

  <div class="text-center">
    <%= form.submit 'Adicionar', class: 'btn btn-outline-primary' %>
  </div>
<% end %>