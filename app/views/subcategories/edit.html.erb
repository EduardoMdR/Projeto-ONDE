<% @title = 'Editar Sub Categoria' %>

<div class="container border my-3 shadow-sm bg-light p-5">
  <h1 class="d-flex justify-content-between text-secondary">
    Atualizar sub categoria
  </h1>

  <%= render 'form', subcategory: @subcategory, url: edit_subcategory_path, m: :patch %>
</div>

<div class="back-button d-flex justify-content-center p-3">
  <%= link_to 'Voltar', url_for(:back), class: 'btn btn-primary form-control w-50' %>
</div>