<h2>Nome: <%= @tag.name %></h2>
<h4>Descrição: <%= @tag.description %></h4>

<br/>
<h4> ofertas que fazem parte desta tag</h4>
<% @offers.each do |form| %>
  <tr>
    <td><%= link_to form.name, show_company_path(form.company) %></td>
  </tr>
<% end %>

<div class="back-button d-flex justify-content-center p-3">
  <%= link_to 'Voltar', tags_path, class: 'btn btn-primary form-control w-50' %>
</div>

<% if current_user&.role_id == 1 %>
  <div class="back-button d-flex justify-content-center p-3">
    <%= link_to 'Editar', edit_tag_path(@tag), method: :get, class: 'btn btn-primary form-control w-25 m-3' %>
    <%= link_to 'Remover', delete_tag_path(@tag), method: 'delete', data: { confirm: 'Você tem certeza?' }, class: 'btn btn-primary form-control w-25 m-3' %>
  </div>
<% end %>