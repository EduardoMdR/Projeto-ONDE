<%= render 'layouts/navbar' %>

<div class="pagina-ofertas mt-1">
  <h1 class="titulo pt-4">Encontre diversos cupons exclusivos de sua loja preferida</h1>
  <div class="row mb-2 mt-5 justify-content-center pb-4">
    <input class="form-control col-5" type="text" placeholder="Buscar Roupa, comida e muito mais...">
    <a href="./pesquisa" class="btn col-1 text-center pt-2" style="background-color: #2454fc;color: #FFF; font-weight: bold;">BUSCAR</a>
  </div>
</div>

<div class="ofertas-home pt-5 d-flex justify-content-center">
  <% @coupons&.each do |form| %>
    <div class="flip-container m-2">
      <div class="flipper">
        <div class="front">
          <div class="cards">
            <img class="card-img-top" src="https://foxcriacaodesitesbh.com.br/fotos/capa_171523130834_1515441788577037_3881032599581863332_n.png" alt="Card image cap">
            <div class="card-img-overlay">
              <div class="rounded-circle porcentagem pt-2 pl-1 h5"><%= form.value %>%</div>
            </div>
            <div class=" m-1">
              <p class="card-text hometextcupom text-justify">
                <%= form.description %></p>
            </div>
          </div>
        </div>
        <div class="back">
          <div class="cards">
            <img class="card-img-top" src="https://diariodorio.com/wp-content/uploads/2020/03/foto-americanas-1280x720.jpg" alt="Card image cap">
            <div class="m-1">
              <h5 class="card-title"><%= form.company.name %></h5>
              <p class="card-text">Valido at√©: <span class="text-success"><%= form.end_time.strftime("%d/%m") %></span></p>
              <div class="text-center pt-1 col">
                <%= button_to  "Pegar Cupom", edit_coupon_path(form), method: :get, class: 'btn-home' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= render 'layouts/pagination' %>