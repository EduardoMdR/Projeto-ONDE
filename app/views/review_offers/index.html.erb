<div class="container">
  <h1 class="titulo pb-4 pt-3">Central de Reviews</h1>

  <div class="row col-13 justify-content-center ml-1 mr-1">
  <!-- Nota da Empresa -->
    <div class="col-12 pb-5 text-center col-sm-6 ">
        <h2> Classificação </h2>
        <div class="pt-4">
          <h1> 4,1 </h1>
          <!-- Estrelas -->
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>    
        </div>
        <div>( 78 Reviews) </div>
    </div>
  <!-- Reviwes sobre a empresa-->
    <div class= "col-12 col-sm-6 text-center mb-5"> 
      <h2> Reviews Respondidas</h2>
      <div>
        <!--
        <%= javascript_include_tag "chart" %>
        <canvas id="gra_reviews"></canvas>
        -->
      </div>
    </div>
  </div>

  <% @review_offers&.each do |form| %>
    <div class="row textreview text-center mb-2 ml-1 mr-1">
      <div class="col-12 col-md-5 col-lg-4 col-xl-3 pt-2 pb-2">
        <h4><%= form.user.name %></h4>
        <p>
          <div>
            <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span> <!-- <%= form.score %> -->
          </div>
        </p>
        <p><%= form.created_at.strftime("%d de %B de %Y") %></p>
        <h5 class="pt-1"><%= link_to form.offer.name, show_offer_path(form.offer), class: 'text-dark' %></h5>
      </div>
      <div class="col-12 col-md-7 col-lg-8 col-xl-9 pb-3 pt-3 text-center">
        <p><%= form.description %>
        </p>
        <!-- resposta -->
        <button class="btn btn-primary btn-review"> Responder </button>
      </div>
    </div>
  <% end %>

  <%= render 'layouts/pagination' %>

</div>