<%= form_with model: review, url: url, method: m do |form| %>
  <div class="form-group">
    <%= form.label :score, 'Nota' %>
    <%= form.number_field :score, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :price, 'Preço' %>
    <%= form.number_field :price, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Comentário' %>
    <%= form.text_field :description %>
  </div>

  <div class="text-center">
    <%= form.submit 'Adicionar', class: 'btn btn-outline-primary' %>
  </div>
<% end %>