<div class="container">
  <h1 class="titulo pt-4 pb-3">Todas minhas ofertas</h1>

  <div class="d-flex justify-content-center pt-1 pb-5">
    <div class="searchbar_admin">
      <input type="text" placeholder="Procurar oferta" class="search_input_admin">
      <%= link_to "<i class='fa fa-search' ></i>".html_safe, pesquisa_path, class: 'search_icon_admin' %>
    </div>
  </div>

  <div class="table-responsive text-nowrap">
    <table class="table table-striped table-hover table-dark">
      <thead>
        <tr>
          <th scope="col">Nome do produto</th>
          <th scope="col">Preço</th>
          <th scope="col">Expira</th>
          <th scope="col" class="text-center">Editar</th>
          <th scope="col" class="text-center">Apagar</th>
        </tr>
      </thead>
      <tbody>
        <% @offers&.each do |form| %>
          <tr>
            <td><%= form.name %></td>
            <td>R$ <%= form.new_price %></td>
            <td>
            <div class="progress">
              <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated te" role="progressbar"                      style="width: 90%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><b>1h 20m</b></div>
            </div>
            </td>
            <td class="text-center"><%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_offer_path(form), method: :get, class: 'text-light' %></td>
            <td class="text-center"><%= link_to "<i class='fa fa-trash-o'></i>".html_safe, delete_offer_path(form), method: :delete, data: { confirm: 'Você tem certeza?'}, class: 'text-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render 'layouts/pagination' %>

  <div class="text-center pt-3">
    <%= button_to  "Cadastrar nova oferta", new_offer_path, method: :get, class: 'btn-empresas' %>
  </div>
</div>